<h1>Articles</h1>
<div>
    <%= will_paginate @articles %>
</div>
<section>
    <% @articles.each do |article| %>
    <p>
        Title: <b><%= article.title %></b><br>
        Description <b><%= article.description %></b><br>
        Created by: <b><%= article.user.username %></b><br>
        <%= link_to "Show", article_path(article) %>
        <% if logged_in? && article.user == current_user %>
            <%= link_to "Edit", edit_article_path(article) %>
            <%= link_to "Delete", article_path(article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        <% end %>
        <br><br>
    <p>
    <% end %>
</section>